<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Заголовок страницы с личными данными -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Личные данные"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:paddingBottom="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- Карточка с личной информацией -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="48dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvStudentFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:text="ФИО: Иванов Иван Иванович"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvStudentID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Преподавателя: 12345"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:paddingBottom="20dp" />

                <TextView
                    android:id="@+id/tvStudentGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Предметы преподавателя"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:paddingBottom="20dp" />

                <TextView
                    android:id="@+id/tvStudentEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: example@teacher.com"
                    android:textSize="18sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
