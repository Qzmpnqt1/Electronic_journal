<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
android:background="@color/white"
tools:context=".activity.SignUpActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Карточка для формы регистрации -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="15dp">

            <!-- Заголовок формы регистрации -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Регистрация"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple" />

            <!-- Переключатель для выбора типа пользователя -->
            <RadioGroup
                android:id="@+id/rgUserType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="25dp">

                <RadioButton
                    android:id="@+id/rbStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ученик"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbTeacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Учитель" />

            </RadioGroup>

            <!-- Поля для имени, фамилии и отчества -->
            <EditText
                android:id="@+id/edName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Имя"
                android:background="@drawable/custom_edittext"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#C0C0C0"
                android:layout_marginTop="25dp" />

            <EditText
                android:id="@+id/edSurname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Фамилия"
                android:background="@drawable/custom_edittext"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#C0C0C0"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/edPatronymic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Отчество"
                android:background="@drawable/custom_edittext"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#C0C0C0"
                android:layout_marginTop="8dp" />

            <!-- Поля специфичные для ученика -->
            <EditText
                android:id="@+id/edDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Дата рождения"
                android:background="@drawable/custom_edittext"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#C0C0C0"
                android:layout_marginTop="8dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edGroupId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="ID группы"
                android:background="@drawable/custom_edittext"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#C0C0C0"
                android:layout_marginTop="8dp"
                android:visibility="visible" />

            <!-- Поле для Email -->
            <EditText
                android:id="@+id/edEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#C0C0C0"
                android:layout_marginTop="8dp" />

            <!-- Поле для пароля -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp" >

                <!-- Поле для ввода пароля -->
                <EditText
                    android:id="@+id/edPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Пароль"
                    android:background="@drawable/custom_edittext"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#C0C0C0" />

                <!-- Кнопка для просмотра пароля -->
                <ImageView
                    android:id="@+id/ivTogglePasswordVisibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp" /> <!-- Иконка глаза (в скрытом состоянии) -->
            </RelativeLayout>

            <!-- Кнопка для регистрации -->
            <Button
                android:id="@+id/btSignUp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Зарегистрироваться"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/purple"
                android:layout_marginTop="30dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Ссылка для входа в систему -->
    <TextView
        android:id="@+id/txAutorization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уже есть аккаунт? Войти"
        android:textSize="14sp"
        android:textColor="@color/purple"
        android:padding="8dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp" />

</LinearLayout>
</ScrollView>
